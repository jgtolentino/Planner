<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Board (Project) Access Rules -->
        
        <!-- Users can only see projects they are members of -->
        <record id="project_project_user_rule" model="ir.rule">
            <field name="name">Project User Access</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('privacy_visibility', '!=', 'followers')]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Project managers can write to their projects -->
        <record id="project_project_manager_rule" model="ir.rule">
            <field name="name">Project Manager Write Access</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Card (Task) Access Rules -->
        
        <!-- Users can see tasks in projects they have access to -->
        <record id="project_task_user_rule" model="ir.rule">
            <field name="name">Task User Access</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
            <field name="domain_force">['|', ('project_id.user_id', '=', user.id), ('user_id', '=', user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Project managers can manage all tasks -->
        <record id="project_task_manager_rule" model="ir.rule">
            <field name="name">Task Manager Full Access</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Portal users can only see tasks assigned to them or they follow -->
        <record id="project_task_portal_rule" model="ir.rule">
            <field name="name">Task Portal Access</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="domain_force">['|', ('user_id.partner_id', '=', user.partner_id.id), ('message_partner_ids', 'in', [user.partner_id.id])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Comment (Message) Access Rules -->
        
        <!-- Users can see messages on tasks they have access to -->
        <record id="mail_message_task_rule" model="ir.rule">
            <field name="name">Message Task Access</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                '|',
                    ('model', '!=', 'project.task'),
                    '&amp;',
                        ('model', '=', 'project.task'),
                        '|',
                            ('res_id', 'in', []),
                            ('author_id', '=', user.partner_id.id)
            ]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
    </data>
</odoo>
